# Azure Application Insights Configuration
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to version control

# Azure Application Insights OTLP endpoint
# Format: https://<your-region>.in.applicationinsights.azure.com/v1/traces
AZURE_OTLP_ENDPOINT=https://YOUR_REGION.in.applicationinsights.azure.com/v1/traces

# Application Insights Connection String
# Get from Azure Portal > Application Insights > Properties
# Format: InstrumentationKey=...;IngestionEndpoint=...;LiveEndpoint=...
AZURE_APP_INSIGHTS_CONNECTION_STRING=InstrumentationKey=YOUR_INSTRUMENTATION_KEY;IngestionEndpoint=https://YOUR_REGION.in.applicationinsights.azure.com/;LiveEndpoint=https://YOUR_REGION.livediagnostics.monitor.azure.com/

# Team and Project Identification
# Used for segmenting metrics across teams/projects
TEAM_NAME=your-team-name
PROJECT_NAME=your-project-name

# Environment (production, staging, development)
ENVIRONMENT=production

# Optional: Adjust export intervals (in milliseconds)
# Metrics export interval (default: 60000 = 1 minute)
OTEL_METRIC_EXPORT_INTERVAL_MILLIS=60000

# Logs export interval (default: 5000 = 5 seconds)
OTEL_LOG_EXPORT_INTERVAL_MILLIS=5000

# Optional: Debug telemetry (set to 1 to enable verbose logging)
# OTEL_DEBUG=0
